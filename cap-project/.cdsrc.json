{
  "build": {
    "target": "./gen",
    "tasks": [
      {
        "for": "hana",
        "src": "db",
        "options": {
          "model": [
            "db",
            "srv"
          ]
        }
      },
      {
        "for": "nodejs",
        "src": "srv",
        "options": {
          "model": [
            "db",
            "srv"
          ]
        }
      }
    ]
  },
  "hana": {
    "deploy-format": "hdbtable"
  },
  "requires": {
    "db": {
      "kind": "sqlite",
      "credentials": {
        "database": "db/data.db"
      },
      "[production]": {
        "kind": "hana"
      }
    }
  }
}
