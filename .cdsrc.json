{
  "build": {
    "target": "gen",
    "tasks": [
      {
        "for": "hana",
        "src": "cap-project/db",
        "options": {
          "model": [
            "cap-project/db",
            "cap-project/srv"
          ]
        }
      },
      {
        "for": "nodejs",
        "src": "cap-project/srv",
        "options": {
          "model": [
            "cap-project/db",
            "cap-project/srv"
          ]
        }
      }
    ]
  },
  "hana": {
    "deploy-format": "hdbtable"
  },
  "requires": {
    "db": {
      "kind": "sqlite",
      "[production]": {
        "kind": "hana"
      }
    }
  }
}
